alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias ll='ls -lh'
alias la='ll -A'
alias l='ls -CF'

alias time='/usr/bin/time -p'

alias history='history -i'

autoload -Uz zmv
alias zmv='noglob zmv -W'

alias e='emacsclient'

alias df='df -kh'
alias du='du -kh'

if [[ -x `which colordiff` ]]; then
  alias diff='colordiff -u'
  else
    alias diff='diff -u'
    fi

export LESS='-MR'
